<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space3"
    android:orientation="horizontal" >
    <TableRow>
        <ImageView
            android:id="@+id/player_profile_imageview"
            android:layout_width="@dimen/list_item_image"
            android:layout_height="@dimen/list_item_image"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/space2"
            android:contentDescription="@string/empty"
            android:src="@drawable/circle_no_profile_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/player_name_textview_"
                    style="@style/ListItemTitleFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="My Name" />

                <TextView
                    android:id="@+id/notification_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="06:56"
                    android:textColor="@color/gray_lighter" />
            </RelativeLayout>

            <TextView
                android:id="@+id/notification_message_textview"
                style="@style/ListItemContentFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="419, 2nd Ave\nNew York, NY 10016" />
        </LinearLayout>

        <ImageView
            android:id="@+id/details_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space2"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/empty"
            android:src="@drawable/right_arrow" />
    </TableRow>
</TableLayout>