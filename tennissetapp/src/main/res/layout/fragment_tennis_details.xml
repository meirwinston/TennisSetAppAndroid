<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logintLayout"
    style="@style/LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical"
    tools:context=".TennisDetailsFragment" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space3"
            android:layout_marginRight="@dimen/space3"
            android:layout_row="0"
            android:contentDescription="@string/empty"
            android:src="@drawable/level" />

        <TextView
            android:id="@+id/tennis_level_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|left"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_row="0"
            android:background="@android:color/white"
            android:hint="@string/label_tennis_level"
            android:maxLines="1"
            android:singleLine="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space3"
            android:layout_marginRight="@dimen/space3"
            android:layout_row="0"
            android:contentDescription="@string/empty"
            android:src="@drawable/right_arrow" />

        <!-- dividor -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:background="@color/gray_lighter" />

        <!-- hand -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space3"
            android:layout_marginRight="@dimen/space3"
            android:layout_row="2"
            android:contentDescription="@string/empty"
            android:src="@drawable/hand" />

        <TextView
            android:id="@+id/hand_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_row="2"
            android:background="@android:color/white"
            android:hint="@string/hint_hand"
            android:maxLines="1"
            android:singleLine="true" />

        <!-- dividor -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:background="@color/gray_lighter" />

        <!-- type of match -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:layout_row="4"
            android:contentDescription="@string/empty"
            android:src="@drawable/ball" />

        <TextView
            android:id="@+id/type_of_match_textview"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_row="4"
            android:background="@drawable/selector_clickable_textview"
            android:entries="@array/profile_gender"
            android:hint="@string/hint_type_of_match" />

        <!-- dividor -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:background="@color/gray_lighter" />


        <!-- type of play -->
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space1"
            android:layout_marginTop="@dimen/space1"
            android:layout_row="6"
            android:contentDescription="@string/empty"
            android:src="@drawable/tennis_racquet" />

        <TextView
            android:id="@+id/type_of_play_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_row="6"
            android:background="@android:color/white"
            android:hint="@string/hint_type_of_play" />

        <!-- dividor -->

         <!-- dividor -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="7"
            android:background="@color/gray_lighter" />

        
        <!-- availability -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space1"
            android:layout_marginTop="@dimen/space1"
            android:layout_row="8"
            android:contentDescription="@string/empty"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/availability_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_row="8"
            android:background="@android:color/white"
            android:hint="@string/hint_availability" />
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space4" />

    <Button
        android:id="@+id/submit_button"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/space4"
        android:text="@string/done_label" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space4" />

</LinearLayout>