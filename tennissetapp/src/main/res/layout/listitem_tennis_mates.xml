<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space2"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tennis_mates_image"
        android:layout_width="@dimen/list_item_image"
        android:layout_height="@dimen/list_item_image"
        android:contentDescription="@string/empty"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/space3"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:src="@drawable/circle_no_profile_image" />

    <TextView
        android:id="@+id/tennis_mates_name_textview"
        style="@style/ListItemTitleFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|left"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/space3"
        android:text="My Name" />

    <TextView
        android:id="@+id/tennis_mates_address_textview"
        style="@style/ListItemContentFont"
        android:layout_gravity="fill_horizontal|left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:text="419, 2nd Ave\nNew York, NY 10016" />

