<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logintLayout"
    style="@style/LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical"
    tools:context=".TennisLevelFragment" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_marginLeft="@dimen/space2"
            android:layout_marginRight="@dimen/space2"
            android:contentDescription="@string/empty"
            android:src="@drawable/tennis_level_0" />

        <TextView
            android:id="@+id/beginner_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|left"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_row="0"
            android:background="@android:color/white"
            android:hint="@string/label_tennis_level_beginner"
            android:maxLines="1"
            android:singleLine="true" />

        <!-- dividor -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:background="@color/gray_lighter" />

        <!-- hand -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:contentDescription="@string/empty"
            android:src="@drawable/tennis_level_1" />

        <TextView
            android:id="@+id/midintermediate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_row="2"
            android:background="@android:color/white"
            android:hint="@string/label_tennis_level_mid_intermediate"
            android:maxLines="1"
            android:singleLine="true" />

        <!-- dividor -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:background="@color/gray_lighter" />

        <!-- type of match -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:layout_row="4"
            android:contentDescription="@string/empty"
            android:src="@drawable/tennis_level_2" />

        <TextView
            android:id="@+id/intermediate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_row="4"
            android:background="@android:color/white"
            android:entries="@array/profile_gender"
            android:hint="@string/label_tennis_level_intermediate" />

        <!-- dividor -->

         <!-- dividor -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:background="@color/gray_lighter" />


        <!-- type of play -->
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:layout_row="6"
            android:contentDescription="@string/empty"
            android:src="@drawable/tennis_level_3" />

        <TextView
            android:id="@+id/semiadvanced_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_row="6"
            android:background="@android:color/white"
            android:hint="@string/label_tennis_level_semi_advanced" />

        <!-- dividor -->

         <!-- dividor -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="7"
            android:background="@color/gray_lighter" />

        
        <!-- availability -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="8"
            android:contentDescription="@string/empty"
            android:src="@drawable/tennis_level_4" />

        <TextView
            android:id="@+id/advanced_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space3"
            android:paddingTop="@dimen/space3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_row="8"
            android:background="@android:color/white"
            android:hint="@string/label_tennis_level_advanced" />
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space4" />

</LinearLayout>