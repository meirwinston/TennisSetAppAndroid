<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SearchMatesFragment" >

    <LinearLayout
        android:id="@+id/search_mates_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space1"
            android:layout_marginLeft="@dimen/space4"
            android:text="@string/title_location"
            android:textSize="@dimen/text_h4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_height"
            android:background="@color/gray_lighter" />

        <AutoCompleteTextView
            android:id="@+id/address_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/map_pointer"
            android:drawablePadding="@dimen/space4"
            android:hint="@string/title_city_and_country"
            android:paddingBottom="@dimen/space1"
            android:paddingLeft="@dimen/space4"
            android:paddingRight="@dimen/space4"
            android:paddingTop="@dimen/space1"
            android:singleLine="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_height"
            android:background="@color/gray_lighter" />

        <!-- level of play -->

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space1"
            android:layout_marginLeft="@dimen/space4"
            android:text="@string/title_tennis_details"
            android:textSize="@dimen/text_h4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_height"
            android:background="@color/gray_lighter" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space3"
                android:layout_marginRight="@dimen/space3"
                android:layout_row="0"
                android:contentDescription="@string/empty"
                android:src="@drawable/level" />

            <TextView
                android:id="@+id/tennis_level_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|left"
                android:layout_row="0"
                android:background="@android:color/white"
                android:hint="@string/label_tennis_level"
                android:maxLines="1"
                android:paddingBottom="@dimen/space3"
                android:paddingTop="@dimen/space3"
                android:singleLine="true" />

            <!-- <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space3"
                android:layout_marginRight="@dimen/space3"
                android:layout_row="0"
                android:contentDescription="@string/empty"
                android:src="@drawable/right_arrow" /> -->

            <!-- dividor -->

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_row="1"
                android:background="@color/gray_lighter" />

            <!-- type of match -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_gravity="center"
                android:layout_row="4"
                android:contentDescription="@string/empty"
                android:src="@drawable/ball" />

            <TextView
                android:id="@+id/type_of_match_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_row="4"
                android:background="@drawable/selector_clickable_textview"
                android:entries="@array/profile_gender"
                android:hint="@string/hint_type_of_match"
                android:paddingBottom="@dimen/space3"
                android:paddingTop="@dimen/space3" />

            <!-- dividor -->

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_row="5"
                android:background="@color/gray_lighter" />

            <!-- type of play -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/space1"
                android:layout_marginTop="@dimen/space1"
                android:layout_row="6"
                android:contentDescription="@string/empty"
                android:src="@drawable/tennis_racquet" />

            <TextView
                android:id="@+id/type_of_play_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_row="6"
                android:background="@android:color/white"
                android:hint="@string/hint_type_of_play"
                android:paddingBottom="@dimen/space3"
                android:paddingTop="@dimen/space3" />

            <!-- dividor -->


            <!-- dividor -->

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_row="7"
                android:background="@color/gray_lighter" />

            <!-- availability -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/space1"
                android:layout_marginTop="@dimen/space1"
                android:layout_row="8"
                android:contentDescription="@string/empty"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/availability_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_row="8"
                android:background="@android:color/white"
                android:hint="@string/hint_availability"
                android:paddingBottom="@dimen/space3"
                android:paddingTop="@dimen/space3" />
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_height"
            android:background="@color/gray_lighter" />

        <!-- submit button -->

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space4" />

        <Button
            android:id="@+id/submit_button"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/space4"
            android:paddingRight="@dimen/space4"
            android:text="@string/label_search" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space4" />
    </LinearLayout>

</ScrollView>